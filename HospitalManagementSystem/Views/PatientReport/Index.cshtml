<div class="container noprinting">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    <input type="text" class="form-control" id="search"/>
                </div>
                <div class="col-6">
                    <button class="btn btn-primary" id="btnSearch">Search</button>
                    <button class="btn btn-primary" id="btnPrint">Print</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table" id="patientList">
                <thead>
                    <tr>
                        <th>Patient Name</th>
                        <th>Gender</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function(){
            $("#btnPrint").click(function(){
                window.print();
            });
            $("#btnSearch").click(function(){
                if ($("#search").val()) {
                    $.ajax({
                        method: "GET",
                        url: "/patientreport/GetData?search=" + $("#search").val(),
                        success: function (data) {
                            $.each(data,function(i,v){
                                console.log(v);
                                var row ="<tr><td>"+ v.patientName +"</td>";
                                row += "<td>"+ v.gender +"</td>";
                                row += "<td>" + (v.phoneNumber===null ? "" : v.phoneNumber) + "</td></tr>";
                                $("#patientList").append(row);
                            });
                           
                        }, error: function (error) {
                            console.log(error);
                        }
                    });
                }
            });
        });
    </script>
}
